@page
@model DeployTools.Web.Pages.PackageCreateModel
@{
    ViewData["Title"] = "New Package";
}
@{
<div class="container mt-4">
    <h1 class="mb-4">Create Package</h1>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }
    <form method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" name="Package.Name" value="@Model.Package.Name" required>
        </div>
        <div class="mb-3">
            <label for="DeployableLocation" class="form-label">Deployable location</label>
                <input type="text" class="form-control" id="DeployableLocation" name="Package.DeployableLocation" value="@Model.Package.DeployableLocation" required>
        </div>
        <div class="mb-3">
            <label for="ExecutableFile" class="form-label">Executable file</label>
                <input type="text" class="form-control" id="ExecutableFile" name="Package.ExecutableFile" value="@Model.Package.ExecutableFile" required>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
    </form>
</div>
}